{
	"private": true,
	"name": "@eslint-config-globex/root",
	"version": "0.0.0",
	"description": "Monorepo root for eslint-config-globex",
	"license": "MIT",
	"scripts": {
		"eslint": "node ./packages/core/bin/eslint-globex packages",
		"lint": "pnpm eslint && pnpm packagelint",
